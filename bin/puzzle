#!/usr/bin/env perl
use strict;
use Getopt::Long;

use PrefApp::Puzzle::Main;


sub help{
    print join "", <DATA>;
    exit 0;
}

my ($command, @args) = @ARGV;

unless($command){
    &help();
}

PrefApp::Puzzle::Main->new(

    argv=>\@ARGV

)->run($command, @args);


__DATA__

Usage: puzzle COMMAND [arg...]

Commands:

    up      Launch one or more puzzle services
    down    Stops and deletes installed puzzle services
    ps      Information about installed puzzle services
     
    
